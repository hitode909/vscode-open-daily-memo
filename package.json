{
    "name": "open-daily-memo",
    "displayName": "open-daily-memo",
    "description": "Open a daily markdown file for memo",
    "version": "0.0.1",
    "publisher": "hitode909",
    "repository": {
        "type": "git",
        "url": "https://github.com/hitode909/vscode-open-daily-memo"
    },
    "keywords": [
        "memo"
    ],
    "engines": {
        "vscode": "^1.24.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:daily-memo.open"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "daily-memo.open",
                "title": "Open daily memo"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "daily-memo extension configuration",
            "properties": {
                "daily-memo.directory": {
                    "type": "string",
                    "default": "~/Documents/",
                    "description": "Directory to store memo files"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
